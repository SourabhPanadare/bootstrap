# Preprocessing

  sass --watch input.scss output.css

# Variables

  $font-family:'TimesNewRoman';
  $primary-color:#333;

# Nesting

  nav{
    ul{
    	margin:0;
        padding:0;
    }
  }

# Import

  _partial.scss:-

   html,body,ul,ol{
	margin:0;
        padding:0;
   }

   main.scss:-

   @import 'partial';

   a{
     text-decoration:none;
   }

# Extend

  %equal-heights{
    display:flex;
    flex-wrap:wrap;
  }

  .message{
    @extend %eqaual-heights;
  }

# Mixins

  @mixin box($width,$height,$background){
     width:$width;
     height:$height;
     background:$background;
  }

  
  .style1{
    @include box(100%,100px,black);
  }

  .style2{
    @include box(background:black,width:100%,height:100px);
  }