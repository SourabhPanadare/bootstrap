   Top Alignment:- .align-self-start

   	<div class="media">
	  <img class="align-self-start mr-3" src="..." alt="Generic placeholder image">
	  <div class="media-body">
	  
	  </div>
	</div>

	Center Alignment:- .align-self-center

	<div class="media">
	  <img class="align-self-center mr-3" src="..." alt="Generic placeholder image">
	  <div class="media-body">
	   
	  </div>
	</div>

	Bottom Alignment:- .align-self-end

	<div class="media">
	  <img class="align-self-end mr-3" src="..." alt="Generic placeholder image">
	  <div class="media-body">

	  </div>
	</div>

